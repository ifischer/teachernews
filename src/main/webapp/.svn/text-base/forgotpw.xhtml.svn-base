<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
  xmlns:ui="http://java.sun.com/jsf/facelets"
  xmlns:f="http://java.sun.com/jsf/core"
  xmlns:c="http://java.sun.com/jsp/jstl/core"
  xmlns:p="http://primefaces.prime.com.tr/ui"
  xmlns:h="http://java.sun.com/jsf/html"
  template="/WEB-INF/templates/default.xhtml">
  <ui:define name="content">
    <h1>#{bundle['link.forgotPassword']}</h1>
    <p><h:outputText
      value="#{bundle['user.password.forgot.description']}" /></p>
    <h:form>
      
      <h:panelGrid columns="3" rowClasses="row1,row2,row3">
        <h:inputText id="email" value="#{flash['user.email']}"
          validatorMessage="#{bundle['user.email.error']}">
          <f:validateRequired />
        </h:inputText>
        <h:message for="email" errorClass="invalid" id="emailError" />
      </h:panelGrid>
      
      <h:commandButton id="forgotPW"
        action="#{userManager.forgotPassword}"
        value="#{bundle['user.forgotpw.send']}" />
    
    </h:form>
  </ui:define>
</ui:composition>
