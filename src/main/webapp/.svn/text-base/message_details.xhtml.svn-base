<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
  xmlns:ui="http://java.sun.com/jsf/facelets"
  xmlns:f="http://java.sun.com/jsf/core"
  xmlns:h="http://java.sun.com/jsf/html"
  xmlns:c="http://java.sun.com/jsp/jstl/core"
  xmlns:p="http://primefaces.prime.com.tr/ui"
  template="/WEB-INF/templates/default.xhtml">
  <ui:define name="content">
    <h:form id="registerStartForm">
      <f:validateBean>
        <h2>#{bundle['message']} - #{bundle['message.details']}</h2>

        <h:panelGrid columns="2" rowClasses="detailsRow">
          <h:outputText value="#{bundle['message.regards']}:"
            class="bold" />
          <h:outputText
            value="#{messageManager.message.regards.name}, #{messageManager.message.regards.firstName}" />

          <h:outputText value="#{bundle['message.expiration']}:"
            class="bold" />
          <h:outputText value="#{messageManager.message.expirationDate}">
            <f:convertDateTime type="date" dateStyle="medium" />
          </h:outputText>

          <h:outputText value="#{bundle['message.content']}:"
            class="bold" />
          <h:outputText value="#{messageManager.message.content}" />
        </h:panelGrid>

        <h:commandButton action="/messages?faces-redirect=true"
          value="#{bundle['application.back']}" />
      </f:validateBean>
    </h:form>
  </ui:define>
</ui:composition>
